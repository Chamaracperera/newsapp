<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/home">

    <!-- Toolbar -->
    <include
        layout="@layout/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Popular Now Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Popular now"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        android:paddingStart="24dp"
        android:layout_marginTop="-4dp"
        android:paddingEnd="24dp"
        android:paddingBottom="1dp"/>

    <!-- Featured News (RecyclerView for horizontal scroll) -->

    <!-- Category Tabs (Fixed Mode) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/featuredRecycler"
        android:layout_width="match_parent"
        android:layout_height="252dp"
        android:orientation="horizontal"
        android:layout_marginTop="-10dp"
        android:paddingBottom="16dp"
        android:visibility="visible"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_featured_news" />

    <LinearLayout
        android:id="@+id/categoryTabsContainer"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_tab_container"
        android:layout_gravity="center"
        android:padding="8dp">

        <!-- All Tab -->
        <TextView
            android:id="@+id/tabAll"
            style="@style/TabStyle"
            android:text="All"
            android:textSize="17dp"
            android:background="@drawable/bg_tab_selected" />

        <!-- Sports Tab -->

        <!-- Academic Tab -->

        <TextView
            android:id="@+id/tabSports"
            style="@style/TabStyle"
            android:background="@drawable/bg_tab_unselected"
            android:text="Sports"
            />

        <TextView
            android:id="@+id/tabAcademic"
            style="@style/TabStyle"
            android:text="Academic"
            android:background="@drawable/bg_tab_unselected" />

        <!-- Events Tab -->
        <TextView
            android:id="@+id/tabEvents"
            style="@style/TabStyle"
            android:text="Events"
            android:background="@drawable/bg_tab_unselected" />
    </LinearLayout>


    <!-- Regular News List (Scrollable) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/newsRecyclerView"
        android:layout_width="390dp"
        android:layout_gravity="center"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="8dp"
        android:visibility="visible"
        android:background="@drawable/news_container"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_regular_news"/>


</LinearLayout>